<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.EditAndDeleteWorkerController">
   <children>
      <Label layoutX="199.0" layoutY="30.0" text="Edit/Delete Worker">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="exitButton" layoutX="123.0" layoutY="344.0" mnemonicParsing="false" onAction="#exit" prefHeight="27.0" prefWidth="54.0" text="Exit" />
      <Button fx:id="deleteButton" layoutX="422.0" layoutY="344.0" mnemonicParsing="false" onAction="#remove" prefHeight="27.0" prefWidth="59.0" text="Delete" />
      <Button fx:id="updateButton" layoutX="497.0" layoutY="344.0" mnemonicParsing="false" onAction="#update" prefHeight="27.0" prefWidth="67.0" text="Update" />
      <Button fx:id="clearButton" layoutX="47.0" layoutY="344.0" mnemonicParsing="false" onAction="#clear" prefHeight="27.0" prefWidth="54.0" text="Clear" />
      <VBox alignment="CENTER" layoutX="74.0" layoutY="100.0" prefHeight="200.0" prefWidth="452.0">
         <children>
            <HBox id="findWorker" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
               <children>
                  <Label text="Find Worker" />
                  <ComboBox fx:id="findWorker" onAction="#findWorkerBoxFunction" prefHeight="20.0" prefWidth="200.0" promptText="Select Worker" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="100.0" styleClass="name">
               <children>
                  <Label text="Name" />
                  <TextField fx:id="name" prefHeight="20.0" prefWidth="200.0" text="Enter Name" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox id="role" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
               <children>
                  <Label text="Role" />
                  <ComboBox fx:id="role" prefHeight="20.0" prefWidth="200.0" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
               <children>
                  <Label text="Profession" />
                  <ComboBox fx:id="profession" prefHeight="20.0" prefWidth="200.0" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
               <children>
                  <Label text="User Account Name" />
                  <TextField fx:id="userAccountName" prefHeight="20.0" prefWidth="200.0" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
               <children>
                  <Label text="Password" />
                  <TextField fx:id="passwordField" prefHeight="20.0" prefWidth="200.0" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
